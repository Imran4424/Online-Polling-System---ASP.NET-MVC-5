@model OnlinePollingSystem.Models.NewPollViewModel

@{
    ViewBag.Title = "NewPoll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Poll"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Poll.Title);
        @Html.TextBoxFor(m => m.Poll.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OptionOne.OptionName);
        @Html.TextBoxFor(m => m.OptionOne.OptionName, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Poll.Id)
    @*@Html.HiddenFor(m => m.OptionOne.Id)*@
    <button type="submit" class="btn btn-primary"> Save </button>
}


